{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "type-check": {
      "inputs": ["**/*.{ts,tsx}"]
    },
    "build": {
      "dependsOn": ["type-check", "lint", "format", "test"],
      "outputs": ["dist/**"],
      "env": []
    },
    "lint": {},
    "test": {},
    "preview": {
      "dependsOn": ["build"]
    }
  }
}
