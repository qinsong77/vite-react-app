{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "type-check": {
      "inputs": ["**/*.{ts,tsx}", "tsconfig*.json"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["type-check", "lint", "format", "test"],
      "outputs": ["dist/**"],
      "env": []
    },
    "lint": {
      "inputs": ["**/*.{js,ts,tsx,jsx}"],
      "outputs": []
    },
    "format": {
      "inputs": ["**/*.{js,ts,tsx,jsx,css,md}"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["type-check"],
      "inputs": ["**/*.test.{ts,tsx}", "**/*.spec.{ts,tsx}", "!e2e/**"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["type-check"]
    },
    "preview": {
      "dependsOn": ["build"]
    }
  }
}
